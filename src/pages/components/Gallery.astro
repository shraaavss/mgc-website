---
import img1 from "./images/img1.jpg";
import img2 from "./images/img2.jpg";
import img3 from "./images/img3.png";
import img4 from "./images/img4.png";
---

<div class="wrapper">
  <h1>Our Gallery</h1>
  <div class="images">
    <img src={img1} alt="" />
    <img src={img2} alt="" />
    <img src={img3} alt="" />
    <img src={img4} alt="" />

  </div>
</div>

<style>

    .wrapper{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 30px;
        padding: 30px;
    }

    .images{
        display: flex;
        gap: 30px;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
    }


  img {
    height: 300px;
    border-radius: 12px;
    transition: 0.2s all ease-out;
  }

  img:hover{
    box-shadow: 4px 4px 4px rgba(74, 74, 74, 1);
  }
</style>
