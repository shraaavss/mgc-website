---
import mgclogo from "./components/images/mgclogo.png";
import Nav from "./components/Nav.jsx";
---

<div class="main-wrap">
  {(<Nav client:visible position={true} />)}

  <div id="intro" class="flex flex-col items-center justify-center">
    <div class="dark-overlay">
      <div class="flex flex-row items-center justify-center">
        <img class="logo" src={mgclogo} alt="" />
        <h1 class="tagline">Mihir Guitar Classes</h1>
      </div>

      <div class="flex flex-row items-center justify-center gap-10">
        <a href="/About"><button class="CTA">Know More</button></a>
        
      </div>
    </div>
  </div>
</div>

<style>
@import url('https://fonts.googleapis.com/css2?family=Yeseva+One&display=swap');
/* font-family: 'Yeseva One', cursive; */

@import url('https://fonts.googleapis.com/css2?family=Josefin+Sans&display=swap');
/* font-family: 'Josefin Sans', sans-serif; */

  body {
    overflow: hidden;
  }

  .main-wrap {
    background-image: url("./components/images/guitars.png");
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
    position: relative;
  }

  .tagline {
    font-family: "Yeseva One", cursive;
    font-size: 100px;
    text-shadow: 3px 3px 4px rgba(0, 0, 0, 0.5);
    text-align: center;
    color: aliceblue;
  }

  .logo {
    height: 300px;
  }

  #intro {
    min-height: 100vh;
    min-width: fit-content;
  }

  .dark-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgb(74, 74, 74, 0.6);
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }

  .CTA{
    padding-inline: 16px;
    padding-block: 10px;
    background-color: rgba(35, 35, 35, 1);
    margin-bottom: 5px;
    border-radius: 15px;
    font-family: "Josefin Sans", sans-serif;
    color: aliceblue;
    font-size: 25px;
    text-align: center;
    transition: all 0.3s ease;
  }

  .CTA:hover{
    box-shadow: 3px 3px 2px rgba(82, 82, 82, 1);
  }

  /* MEDIA QUERIES */

  @media screen and (max-width: 767px) {
    .dark-overlay {
      display: flex;
      flex-direction: column;
    }

    h1 {
      font-size: 50px;
    }

    .logo {
      height: 100px;
    }
  }
</style>
